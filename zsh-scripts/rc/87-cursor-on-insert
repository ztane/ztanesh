change-insert-cursor () {
    if [[ "$STATUSBAR" != '1' ]]
    then
        return
    fi
    if [[ "$ZLE_STATE" == *overwrite* ]]
    then
        echo -ne '\033]50;CursorShape=0\007'
    else
        echo -ne '\033]50;CursorShape=2\007'
    fi
}

overwrite-mode () {
    zle .$WIDGET
    change-insert-cursor
}

zle -N overwrite-mode

change-insert-cursor
